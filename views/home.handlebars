{{#each posts as |post| }}
<div class="row align-center mb-5">
  <div class="col-md-12">
    <h2><a href="/post/{{post.id}}">{{post.title}}</a></h2>
    <p>{{post.content}}</p>
    <p>Published by {{post.author}} on {{formatDate post.createdAt}}</p>
  </div>
</div>
{{/each}}
